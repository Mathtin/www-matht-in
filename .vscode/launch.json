{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Serve Web Package (simple-http-server)",
            "program": "~/.cargo/bin/simple-http-server",
            "args": ["--nocache", "-i", "-p", "8080", "--ip", "127.0.0.1", "${workspaceFolder}/target/web-dist"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Prepare Serve Web Pakage"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Serve Dev Web Package (simple-http-server)",
            "program": "~/.cargo/bin/simple-http-server",
            "args": ["--nocache", "-i", "-p", "8080", "--ip", "127.0.0.1", "${workspaceFolder}/target/web-dist-dev"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Prepare Serve Developer Web Pakage"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'web'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=web",
                    "--package=shards-browser"
                ],
                "filter": {
                    "name": "web",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
