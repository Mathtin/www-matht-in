{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Dev Web Package (edge+simple-http-server)",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/front-page",
            "preLaunchTask": "Serve Developer Web Package"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Serve Release Web Package (simple-http-server)",
            "program": "~/.cargo/bin/simple-http-server",
            "args": ["--nocache", "-i", "-p", "8080", "--ip", "127.0.0.1", "${workspaceFolder}/target/web-dist"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Prepare Serve Web Pakage"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'web'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=web",
                    "--package=shards-browser"
                ],
                "filter": {
                    "name": "web",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'xtask'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=xtask",
                    "--package=xtask"
                ],
                "filter": {
                    "name": "xtask",
                    "kind": "bin"
                }
            },
            "args": ["build-web-dist"],
            "cwd": "${workspaceFolder}"
        }
    ]
}
